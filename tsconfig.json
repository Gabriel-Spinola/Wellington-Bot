{
"compilerOptions": {
  "lib": [
    "es2022"
  ],
  "module": "commonjs",
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true,
  "target": "es2022",
  "noImplicitAny": true,
  "moduleResolution": "node",
  "sourceMap": true,
  "outDir": "dist",
  "baseUrl": ".",
  "paths": {
    "*": ["node_modules/*", "src/types/*"]
  },
  "resolveJsonModule": true
},
"include": ["./src/**/*", "config.mjs"]
}